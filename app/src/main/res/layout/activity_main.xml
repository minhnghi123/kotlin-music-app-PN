<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Thanh tiêu đề: Music App bên trái, Login bên phải -->

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="49dp"
        android:padding="16dp"
        android:text="PN Music"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Banner dưới thanh tiêu đề -->

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_alignTop="@id/tvTitle"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="22dp"
        android:text="Đăng nhập"
        app:backgroundTint="@null"
        android:background="@drawable/btn_gradient"/>

    <ImageView
        android:id="@+id/imgBanner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_backgrround"
        android:layout_below="@id/tvTitle" />

    <!-- RecyclerView nằm dưới banner -->

    <!-- Thanh navigation dưới -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPlaylists"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNav"
        android:layout_below="@id/imgBanner"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="-14dp"
        android:padding="8dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-10dp"
        app:menu="@menu/bottom_menu" />

</RelativeLayout>
