<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="20dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            android:tint="#1E1E1E"
            android:contentDescription="Back"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Liked Songs"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1E1E1E"/>

            <TextView
                android:id="@+id/tvSongCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 songs"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnClearAll"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_delete"
            android:tint="#F44336"
            android:contentDescription="Clear All"/>
    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingBottom="16dp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPlayAll"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Play All"
            android:textSize="14sp"
            android:textStyle="bold"
            app:icon="@drawable/ic_play"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:cornerRadius="28dp"
            app:backgroundTint="#1E1E1E"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShuffle"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Shuffle"
            android:textSize="14sp"
            android:textStyle="bold"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:icon="@drawable/ic_shuffle"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:cornerRadius="28dp"
            app:strokeColor="#1E1E1E"
            app:strokeWidth="2dp"/>
    </LinearLayout>

    <!-- Songs List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFavoriteSongs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="12dp"
        android:clipToPadding="false"/>

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/tvEmptyState"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_favorite_filled"
            android:alpha="0.2"
            android:contentDescription="No favorites"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No liked songs yet"
            android:textSize="20sp"
            android:textColor="#757575"
            android:layout_marginTop="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start adding songs to your favorites!"
            android:textSize="14sp"
            android:textColor="#999999"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

</LinearLayout>




