<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingBottom="8dp">

    <LinearLayout
        android:id="@+id/miniRoot"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_miniplayer"
        android:padding="8dp"
        android:elevation="6dp"
        android:gravity="center_vertical"
        android:clipToOutline="true">

        <!-- Ảnh bài hát -->
        <ImageView
            android:id="@+id/imgMiniCover"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            android:background="@drawable/rounded_cover"
            android:clipToOutline="true" />

        <!-- Tiêu đề + nghệ sĩ -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtMiniTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Title"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/txtMiniArtist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Artist"
                android:textColor="#BDBDBD"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Icon like -->
        <ImageButton
            android:id="@+id/btnMiniLike"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_favorite"
            app:tint="#FFFFFF"
            android:contentDescription="Yêu thích"/>

        <!-- Nút Play -->
        <ImageButton
            android:id="@+id/btnMiniToggle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ic_play"
            app:tint="#FFFFFF"
            android:contentDescription="Play/Pause"/>

        <!-- Nút Next -->
        <ImageButton
            android:id="@+id/btnMiniNext"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_next"
            app:tint="#FFFFFF"
            android:contentDescription="Next"/>
    </LinearLayout>
</LinearLayout>
