<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer black vinyl disc -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#1A1A1A"/>
            <size android:width="300dp" android:height="300dp"/>
        </shape>
    </item>
    
    <!-- Grooves effect - concentric circles -->
    <item android:top="10dp" android:bottom="10dp" android:left="10dp" android:right="10dp">
        <shape android:shape="oval">
            <stroke android:width="1dp" android:color="#252525"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
    
    <item android:top="20dp" android:bottom="20dp" android:left="20dp" android:right="20dp">
        <shape android:shape="oval">
            <stroke android:width="1dp" android:color="#252525"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
    
    <item android:top="30dp" android:bottom="30dp" android:left="30dp" android:right="30dp">
        <shape android:shape="oval">
            <stroke android:width="1dp" android:color="#252525"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
    
    <item android:top="40dp" android:bottom="40dp" android:left="40dp" android:right="40dp">
        <shape android:shape="oval">
            <stroke android:width="1dp" android:color="#252525"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
    
    <item android:top="50dp" android:bottom="50dp" android:left="50dp" android:right="50dp">
        <shape android:shape="oval">
            <stroke android:width="1dp" android:color="#252525"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
    
    <!-- Inner label area (lighter) -->
    <item android:top="80dp" android:bottom="80dp" android:left="80dp" android:right="80dp">
        <shape android:shape="oval">
            <solid android:color="#2A2A2A"/>
        </shape>
    </item>
    
    <!-- Center hole -->
    <item android:top="140dp" android:bottom="140dp" android:left="140dp" android:right="140dp">
        <shape android:shape="oval">
            <solid android:color="#0A0A0A"/>
        </shape>
    </item>
</layer-list>
